version: "3.9"
services:
  auth:
    build:
      context: .
    container_name: pdns_auth
    restart: always
    ports:
      - "53:53"
      - "53:53/udp"
      - "8088:8081"
    environment:
      - PDNSCONF_LOCAL_ADDRESS
      - PDNSCONF_LAUNCH
      - PDNSCONF_GMYSQL_HOST
      - PDNSCONF_GMYSQL_USER
      - PDNSCONF_GMYSQL_PASSWORD
      - PDNSCONF_GMYSQL_DBNAME
      - PDNSCONF_GMYSQL_DNSSEC
      - PDNSCONF_INCLUDE_DIR
      - PDNSCONF_DNSUPDATE
      - PDNSCONF_GUARDIAN
      - PDNSCONF_API_KEY
      - PDNSCONF_VERSION_STRING
      - PDNSCONF_DISTRIBUTOR_THREADS
      - PDNSCONF_EDNS_SUBNET_PROCESSING
      - PDNSCONF_MASTER
      - PDNSCONF_SLAVE
      - SECALLZONES_CRONJOB
     network_mode: bridge